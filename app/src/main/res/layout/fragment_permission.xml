<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">

        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_contact"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="通讯录" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_message"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="短信" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_phone_message"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="手机参数" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_location"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="位置" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_calendar"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="日历" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_storage"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="照片及文件" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_microphone"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="麦克风" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_camera"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="相机" />



                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_ex"
                    style="@style/InfoItem.Account"
                    android:layout_marginTop="16dp"
                    app:sLeftTextString="隐私权限利用"
                    app:sDividerLineType="none" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="服务器地址:"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_api_url"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="请输入服务器的地址..."
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保存"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>